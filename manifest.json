{
  "manifest_version": 3,
  "name": "Netflix 字幕優化",
  "version": "1.0",
  "description": "自動優化 Netflix 字幕翻譯",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*"],
      "matches": ["*://*.netflix.com/*"]
    }
  ]
}
