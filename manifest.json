{
  "manifest_version": 3,
  "name": "字幕助手",
  "version": "1.0",
  "description": "自動優化串流平台字幕翻譯",
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*"],
      "matches": ["*://*.netflix.com/*"]
    }
  ]
}
